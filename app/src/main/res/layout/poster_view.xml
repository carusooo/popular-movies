<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/poster_imageview"
        android:layout_width="match_parent"
        android:layout_height="278dp"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        tools:ignore="ContentDescription" />
    <!--The ContentDescription for poster_imageview is set to the movie title in MainActivity-->
    <TextView
        android:id="@+id/poster_textview"
        app:layout_constraintStart_toStartOf="@id/poster_imageview"
        app:layout_constraintEnd_toEndOf="@id/poster_imageview"
        app:layout_constraintBottom_toBottomOf="@id/poster_imageview"
        app:autoSizeTextType="uniform"
        style="@style/PosterText" />

</android.support.constraint.ConstraintLayout>

