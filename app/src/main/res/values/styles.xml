<resources xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="MainToolbar" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">?attr/colorPrimaryDark</item>
        <item name="android:elevation" tools:targetApi="lollipop">4dp</item>
        <item name="android:theme"> @style/ToolbarText</item>
    </style>

    <style name="ToolbarText" parent="AppTheme">
        <item name="android:background">?attr/colorPrimaryDark</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Spinner" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:theme"> @style/ToolbarText</item>
    </style>

    <style name="SpinnerItem" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:theme"> @style/ToolbarText</item>
    </style>


    <style name="SpinnerDropdownItem" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">8dip</item>
        <item name="android:theme"> @style/ToolbarText</item>
    </style>

    <style name="MainLoadingIndicator" parent="@style/SpinKitView.Large.CubeGrid">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:visibility">invisible</item>
    </style>

    <style name="OfflineError" parent="AppTheme">
        <item name="android:visibility">invisible</item>
    </style>

   <!--DetailActivity Styles -->

    <style name="DetailTitle" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:textSize">30sp</item>
        <item name="android:padding">8dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:theme">@style/ToolbarText</item>
    </style>

    <style name="DetailPoster" parent="AppTheme">
        <item name="android:layout_width">185dp</item>
        <item name="android:layout_height">278dp</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="DetailItem" parent="AppTheme">
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:elevation" tools:targetApi="lollipop">2dp</item>
    </style>

    <style name="DetailYear" parent="DetailItem">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="DetailRuntime" parent="DetailItem">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="DetailRating" parent="DetailItem">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="DetailDescription" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="DetailLoadingIndicator" parent="@style/SpinKitView.Large.ThreeBounce">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:visibility">invisible</item>
    </style>

</resources>
